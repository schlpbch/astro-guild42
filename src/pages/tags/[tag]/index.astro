---
import { getCollection } from "astro:content";
import TopicEvents from "@layouts/TopicEvents.astro";
import getEventsByTopic from "@utils/getEventsByTopic";
import getPagination from "@utils/getPagination";
import getUniqueTopics from "@utils/getUniqueTopics";

export async function getStaticPaths() {
  const posts = await getCollection("blog");

  const topics = getUniqueTopics(posts);

  return topics.map(({ tag, tagName }) => {
    return {
      params: { tag },
      props: { tag, tagName, posts },
    };
  });
}

const { tag, tagName, posts } = Astro.props;

const eventsByTopic = getEventsByTopic(posts, tag);

const pagination = getPagination({
  posts: eventsByTopic,
  page: 1,
  isIndex: true,
});
---

<TopicEvents {...pagination} {tag} {tagName} />
