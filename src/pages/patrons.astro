---
import { SITE } from "@config";
import Layout from "@layouts/Layout.astro";
import Main from "@layouts/Main.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import { Category } from "types";

import PatronCategory from "../components/PatronCategory.astro";
---

<Layout title={`Patrons | ${SITE.title}`}>
  <Header activeNav="patrons" />
  <Main pageTitle="Patrons" pageDesc="Life, the Universe and Everything.">
    <p class="py-3">
      If you like to support us, please consider becoming a patron.
    </p>
    <PatronCategory
      title="Category.Everything"
      category={Category.Everything}
    />
    <PatronCategory title="Category.Universe" category={Category.Universe} />
    <PatronCategory title="Category.Life" category={Category.Life} />
    <section class="pb-3 pl-0">
      <h2 class="pb-2 pt-4 text-2xl font-semibold tracking-wide">
        Become a Patron
      </h2>
      <p class="py-3">
        Our patrons help us to organize our events free of charge. Please choose
        a category suited for you and become a patron.
      </p>
      <ul class="list-outside list-[square] pl-6 marker:text-blue-400">
        <li class="py-0.5">
          starting from 100 CHF: <span class="font-semibold tracking-wide"
            >Category.Life</span
          >
        </li>
        <li class="py-0.5">
          starting from 500 CHF: <span class="font-semibold tracking-wide"
            >Category.Universe</span
          >
        </li>
        <li class="py-0.5">
          starting from 1000 CHF: <span class="font-semibold tracking-wide"
            >Category.Everything</span
          >
        </li>
      </ul>
    </section>
  </Main>
  <Footer />
</Layout>
