---
import { getCollection } from "astro:content";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Layout from "@layouts/Layout.astro";
import Main from "@layouts/Main.astro";
import Topic from "@components/Topic.astro";
import getUniqueTopics from "@utils/getUniqueTopics";
import { SITE } from "@config";

const events = await getCollection("blog");

let topics = getUniqueTopics(events);
---

<Layout title={`Topics | ${SITE.title}`}>
  <Header activeNav="topics" />
  <Main pageTitle="Topics" pageDesc="All the topcis covered so far.">
    <ul>
      {topics.map(({ topic }) => <Topic {topic} size="lg" />)}
    </ul>
  </Main>
  <Footer />
</Layout>
