---
import { getCollection } from "astro:content";
import TopicEvents from "@layouts/TopicEvents.astro";
import getEventsByTopic from "@utils/getEventsByTopic";
import getPagination from "@utils/getPagination";
import getUniqueTopics from "@utils/getUniqueTopics";

export async function getStaticPaths() {
  const events = await getCollection("events");

  const topics = getUniqueTopics(events);

  return topics.map(({ topic, topicName }) => {
    return {
      params: { topic },
      props: { topic, topicName, posts: events },
    };
  });
}

const { topic, topicName, posts } = Astro.props;

const eventsByTopic = getEventsByTopic(posts, topic);

const pagination = getPagination({
  posts: eventsByTopic,
  page: 1,
  isIndex: true,
});
---

<TopicEvents {...pagination} {topic} {topicName} />
