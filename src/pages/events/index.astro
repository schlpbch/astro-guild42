---
import { getCollection } from "astro:content";
import Events from "@layouts/Events.astro";
import getSortedPastEvents from "@utils/getSortedPastEvents";
import getPagination from "@utils/getPagination";

const events = await getCollection("blog");

const sortedPastEvents = getSortedPastEvents(events);

const pagination = getPagination({
  posts: sortedPastEvents,
  page: 1,
  isIndex: true,
});
---

<Events {...pagination} />
