---
import { getCollection } from "astro:content";
import Events from "@layouts/Events.astro";
import getSortedPosts from "@utils/getSortedEvents";
import getPagination from "@utils/getPagination";

const events = await getCollection("blog");

const sortedPosts = getSortedPosts(events);

const pagination = getPagination({
  posts: sortedPosts,
  page: 1,
  isIndex: true,
});
---

<Events {...pagination} />
@utils/getSortedEvents
