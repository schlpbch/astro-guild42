---
import { type CollectionEntry, getCollection } from "astro:content";
import Events from "@layouts/Events.astro";
import EventDetails from "@layouts/EventDetails.astro";
import getSortedEvents from "@utils/getSortedPastEvents";
import getPageNumbers from "@utils/getPageNumbers";
import getPagination from "@utils/getPagination";

export interface Props {
  post: CollectionEntry<"blog">;
}

export async function getStaticPaths() {
  const events = await getCollection("blog", ({ data }) => !data.draft);

  const postResult = events.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));

  const pagePaths = getPageNumbers(events.length).map(pageNum => ({
    params: { slug: String(pageNum) },
  }));

  return [...postResult, ...pagePaths];
}

const { slug } = Astro.params;
const { post } = Astro.props;

const events = await getCollection("blog");

const sortedEvents = getSortedEvents(events);

const pagination = getPagination({
  posts: sortedEvents,
  page: slug,
});
---

{post ? <EventDetails post={post} /> : <Events {...pagination} />}
